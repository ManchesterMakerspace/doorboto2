{
  "name": "doorboto",
  "version": "3.1.3",
  "description": "This is a server for an access control system",
  "main": "build/doorboto",
  "scripts": {
    "start": ". ./prod.sh && npm build && pm2 start ecosystem.config.js",
    "test": "npm run build && node build/testing/unit_test.js",
    "i-test": "npm run build && testing/./run_integration.sh",
    "show-logs": "pm2 logs",
    "shutdown": "pm2 delete ecosystem.config.js",
    "restart": "pm2 restart ecosystem.config.js",
    "install": "./install.sh",
    "postversion": "git add . && git commit && git push --tags",
    "build": "npx tsc -p tsconfig.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ManchesterMakerspace/doorboto2.git"
  },
  "author": "Manchester Makerspace",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ManchesterMakerspace/doorboto2/issues"
  },
  "homepage": "https://github.com/ManchesterMakerspace/doorboto2#readme",
  "private": true,
  "dependencies": {
    "@serialport/bindings": "^9.0.2",
    "bindings": "^1.5.0",
    "mongodb": "^3.6.2",
    "node-persist": "^3.1.0",
    "serialport": "^9.0.2"
  },
  "engines": {
    "node": "14.11.0",
    "npm": "6.14.8"
  },
  "devDependencies": {
    "@types/mongodb": "^3.6.3",
    "@types/node": "^14.14.13",
    "@types/node-persist": "^3.1.0",
    "@types/serialport": "^8.0.1",
    "eslint": "^7.12.1",
    "eslint-config-prettier": "^6.15.0",
    "prettier": "2.1.2",
    "typescript": "^4.1.3"
  }
}
